{
  "name": "build-header",
  "version": "1.1.0",
  "private": false,
  "description": "Put a fancy header to your build logs",
  "keywords": [
    "build",
    "head",
    "logs",
    "script"
  ],
  "homepage": "https://github.com/maraisr/build-header",
  "repository": {
    "type": "git",
    "url": "https://github.com/maraisr/build-header"
  },
  "license": "MIT",
  "author": "Marais Rossouw <me@maraisr.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "bundt index.js",
    "format": "prettier --write '*.{js,md}'"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": true
  },
  "dependencies": {
    "boxen": "^5.1.2",
    "env-ci": "^5.0.2",
    "kleur": "^4.1.4"
  },
  "devDependencies": {
    "bundt": "^1.1.5",
    "prettier": "^2.4.1"
  },
  "engines": {
    "node": ">=10.15.0"
  }
}
