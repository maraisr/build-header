{
  "name": "build-header",
  "version": "1.0.2",
  "private": false,
  "description": "Put a fancy header to your build logs",
  "keywords": [
    "build",
    "head",
    "logs",
    "script"
  ],
  "homepage": "https://github.com/maraisr/build-header",
  "repository": {
    "type": "git",
    "url": "https://github.com/maraisr/build-header"
  },
  "license": "MIT",
  "author": "Marais Rossouw <me@maraisr.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "bundt index.js",
    "format": "prettier --write '*.js'",
    "prepublishOnly": "yarn build",
    "test": "ava index.spec.js"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": true
  },
  "dependencies": {
    "env-ci": "^3.2.0",
    "kleur": "^3.0.3"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "boxen": "^3.1.0",
    "bundt": "^0.4.0",
    "prettier": "^1.17.0"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
